{
  "compilerOptions": {
    "outDir": "dist", // Directorio de salida para los archivos compilados
    "module": "ESNext", // Usa m√≥dulos ES
    "target": "ES6", // Compila a ES6
    "lib": ["DOM", "ES6"],
    "jsx": "react-jsx", // Soporte para JSX
    "declaration": true, // Genera archivos .d.ts para TypeScript
    "sourceMap": true, // Genera source maps
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node"
  },
  "include": ["src/**/*"], // Incluye todos los archivos en src
  "exclude": ["node_modules", "dist", "**/*.test.tsx"] // Excluye node_modules y tests
}